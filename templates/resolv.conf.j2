{% if (ct_cloud | default('grounded')) == 'aws' %}
{%   if ct_family == "redhat" %}
options timeout:2 attempts:5
; generated by /usr/sbin/dhclient-script
{%     for domain in dnsmasq_domains %}
search {{domain}}
{%     endfor %}
nameserver 127.0.0.1
{%   elif ct_family == "debian" %}
# MANAGED_BY_ANSIBLE
nameserver 127.0.0.1
options edns0 trust-ad
{%     for domain in dnsmasq_domains %}
search {{domain}}
{%     endfor %}
{%   endif %}
# END
{% else %}
# not AWS
options edns0
# END
{% endif %}
